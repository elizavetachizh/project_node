<h2 class="page-title">Редактирование страницы</h2>
<a href="/pages" class="btn btn-primary">Вернуться ко всем страницам</a>
<br><br>

<form method="post" action="/admin_page/edit-page/<%= id %>">

    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>

    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>

    <button class="btn btn-default">Submit</button>

     <%= ("../partials/messagesAdmin", locals) %>

        <% if (errors) {%>
            <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
            <% });%>
        <% }%>
</form>