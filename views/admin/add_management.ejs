<h2 class="page-title">Добавить продукт</h2>
<br><br>
<a href="/admin_management" class="btn btn-primary">Показать всх начальников</a>
<br><br>

<form method="post" action="/admin_management/add-men" enctype="multipart/form-data">

    <div class="form-group">
        <label for="">Полное имя</label>
        <input type="text" class="form-control" name="fullName" value="<%= fullName %>" placeholder="fullName">
    </div>

     <div class="form-group">
            <label for="">Должность</label>
            <input type="text" class="form-control" name="position" value="<%= position %>" placeholder="position">
        </div>
            <div class="form-group">
                   <label for="">Категория</label>

                       <% name.forEach(function(dep){ %>
                           <input type="checkbox" name="name" value="<%= name %>"><%= dep.name %></input>
                       <% }); %>

               </div>

                <div class="form-group">
                                  <label for="">department</label>

                                      <% department.forEach(function(dep){ %>
                                          <input type="checkbox" name="department" value="<%= department %>"><%= dep.name %></input>
                                      <% }); %>

                              </div>

    <div class="form-group">
        <label for="">Картинка</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="">
    </div>

    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function() {
        readURL(this);
    });

</script>